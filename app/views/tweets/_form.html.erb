<%= form_for(@tweet) do |f| %>
	<% if @tweet.errors.any? %>
	
	<div id="error_explanation">
	<!-- Keep this pluralize in mind, because you can use it for saying there's a # of comments, replies, etc. wherever you want -->
		<h2><%= pluralize(@tweet.errors.count, "error") %>
		prohibited this tweet from being saved:</h2>

	<u1>
		<% @tweet.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</u1>
	</div>
<% end %>

<div class="field">
	<%= f.label :message %><br>
	<%= f.text_field :message %>
</div>

<div class="field">
	<%= f.label :user_id %><br>
	<%= f.text_field :user_id, value: current_user.id %>
</div>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>