<%= form_for(@tweet) do |f| %>
	<% if @tweet.errors.any? %>
	
	<div id="error_explanation">
	<!-- Keep this pluralize in mind, because you can use it for saying there's a # of comments, replies, etc. wherever you want -->
		<h2><%= pluralize(@tweet.errors.count, "error") %>
		prohibited this tweet from being saved:</h2>

	<u1>
		<% @tweet.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</u1>
	</div>
<% end %>

<div class="form-group">
	<%= f.label :message, "Tweet" %><br>
	<%= f.text_area :message, size: "95x5", class: "form-control", placeholder: "Put up to 140 characters." %>
</div>

<div class="cant-see-me">
	<%= f.label :user_id %><br>
	<%= f.number_field :user_id, value: current_user.id %>
</div>

<div class="actions">
	<%= f.submit class: "btn btn-primary btn-md" %>
</div>
<% end %>